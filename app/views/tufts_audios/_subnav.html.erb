<%
 hasTranscript = !@document_fedora.datastreams["ARCHIVAL_XML"].nil? && !@document_fedora.datastreams["ARCHIVAL_XML"].dsLocation.nil?
 metadata = Tufts::ModelMethods.get_metadata(@document_fedora)
%>
<div class="span6 pull-right download_links">
  <a href="/file_assets/<%= params[:id] %>"><i class="icon-headphones"/></i>&nbsp;Download Audio File</a>&nbsp;&nbsp;
<% if hasTranscript %>
  <a href="/file_assets/transcript/<%= params[:id] %>"><i class="icon-file"/></i>&nbsp;Download Transcript</a>
<% end %>
  <%= render :partial => 'shared/add_to_list', :locals => {:metadata => metadata} %>
</div>
